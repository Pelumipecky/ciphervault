# Copy this file to .env and fill with your Supabase project credentials
# Never commit real credentials to version control

# Public client keys (used by Vite frontend)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Server-side service role key (required for RPCs and admin actions)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Optional: reCAPTCHA secret if you use contact/reCAPTCHA verification
RECAPTCHA_SECRET=

# Server port (optional)
PORT=3000
# Copy this file to .env and fill in your real values (DO NOT commit .env)
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Frontend (Vite) public env vars
VITE_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here
VITE_SUPABASE_PUBLISHABLE_KEY=sb_publishable_key_here

# Email Notifications (EmailJS - Get free account at https://www.emailjs.com/)
VITE_EMAIL_NOTIFICATIONS_ENABLED=true
VITE_EMAILJS_SERVICE_ID=service_ciphervault
VITE_EMAILJS_TEMPLATE_ID=template_notification
VITE_EMAILJS_PUBLIC_KEY=YOUR_EMAILJS_PUBLIC_KEY

# App Configuration
VITE_APP_URL=https://ciphervault.com
